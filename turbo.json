{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_API_URL",
        "CLOUDFLARE_ACCOUNT_ID",
        "CF_API_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "__tests__/**", "*.config.{js,ts}"]
    },
    "test:unit": {
      "outputs": ["coverage/unit/**"],
      "inputs": ["src/**", "__tests__/unit/**"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/integration/**"],
      "inputs": ["src/**", "__tests__/integration/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["coverage/e2e/**"],
      "inputs": ["src/**", "e2e/**", "cypress/**"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["**/*.{js,jsx,ts,tsx}"]
    },
    "type-check": {
      "outputs": [],
      "inputs": ["**/*.{ts,tsx}", "tsconfig.json"]
    },
    "deploy": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}