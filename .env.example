# ==============================================
# BLAZE SPORTS INTELLIGENCE - ENVIRONMENT CONFIG
# ==============================================

# Node Environment
NODE_ENV=development

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/blazesportsintel?schema=public
REDIS_URL=redis://localhost:6379

# ==============================================
# API CONFIGURATION
# ==============================================
API_PORT=3000
API_HOST=0.0.0.0
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ==============================================
# CORS & SECURITY
# ==============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# ==============================================
# CLOUDFLARE
# ==============================================
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# Cloudflare R2 buckets
R2_MEDIA_BUCKET=bsi-3d-assets
R2_DATA_BUCKET=bsi-sports-data
R2_YOUTH_BUCKET=bsi-youth-data

# Cloudflare KV Namespaces
KV_SPORTS_DATA_ID=your-kv-id
KV_ANALYTICS_CACHE_ID=your-kv-id
KV_VISION_AI_CACHE_ID=your-kv-id

# ==============================================
# UNREAL ENGINE / PIXEL STREAMING
# ==============================================
UE_FRONTEND_URL=https://YOUR_UE_SIGNALING_OR_FRONTEND_HOST
ALLOWED_ADMIN_EMAIL=ahump20@outlook.com

# ==============================================
# MONITORING & ERROR TRACKING
# ==============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==============================================
# THIRD-PARTY APIS (Sports Data)
# ==============================================
SPORTS_API_KEY=your-sports-api-key
PERFECT_GAME_API_KEY=your-pg-api-key

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_DEVELOPER_MODE=false
ENABLE_VISION_AI=true
ENABLE_3D_GRAPHICS=true
ENABLE_WEBGPU=false
