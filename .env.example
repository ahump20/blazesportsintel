NODE_ENV=development
TIMEZONE=America/Chicago
BLAZE_USER_AGENT=BlazeSportsIntelBot/1.0
SITE_URL=https://blazesportsintel.com

# Cloudflare R2 (S3-compatible)
R2_BUCKET=blaze-sportsintel
