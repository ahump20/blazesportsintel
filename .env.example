# Optional keys (leave blank locally or use a secret manager)
COLLEGEFOOTBALLDATA_API_KEY=
SPORTSDATAIO_API_KEY=

# CORS
CORS_ORIGIN=https://blazesportsintel.com

# Local cache
REDIS_URL=redis://localhost:6379
