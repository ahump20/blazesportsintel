{
  "name": "@blazesportsintel/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Blaze Sports Intelligence - The Deep South's Sports Intelligence Hub",
  "author": "Blaze Intelligence",
  "license": "MIT",
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/schemas",
    "packages/sports-data"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "npm run dev --workspace @blazesportsintel/web",
    "dev:mobile": "npm run dev --workspace @blazesportsintel/mobile",
    "dev:api": "npm run dev --workspace @blazesportsintel/api",
    "build": "turbo run build",
    "build:web": "npm run build --workspace @blazesportsintel/web",
    "build:packages": "turbo run build --filter='./packages/*'",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy": "turbo run deploy",
    "deploy:production": "turbo run deploy --filter='@blazesportsintel/web' -- --env production",
    "deploy:staging": "turbo run deploy --filter='@blazesportsintel/web' -- --env staging",
    "data:refresh": "npm run refresh --workspace @blazesportsintel/sports-data",
    "data:validate": "npm run validate --workspace @blazesportsintel/sports-data",
    "security:scan": "npm audit && turbo run security:scan",
    "db:migrate": "npm run migrate --workspace @blazesportsintel/database",
    "db:seed": "npm run seed --workspace @blazesportsintel/database"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  }
}
